{
  "info": {
    "name": "Zendesk Macro Importer",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Macro From CSV Row",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const title = pm.iterationData.get(\"title\");",
              "const activeRaw = String(pm.iterationData.get(\"active\") || \"\").toLowerCase();",
              "const active = [\"true\",\"1\",\"yes\",\"y\"].includes(activeRaw);",
              "const actions = JSON.parse(pm.iterationData.get(\"actions_json\"));",
              "pm.request.body.raw = JSON.stringify({ macro: { title, active, actions } });"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "auth": {
          "type": "basic",
          "basic": [
            {
              "key": "username",
              "value": "{{email}}/token"
            },
            {
              "key": "password",
              "value": "{{api_token}}"
            }
          ]
        },
        "url": "https://{{subdomain}}.zendesk.com/api/v2/macros.json",
        "body": {
          "mode": "raw",
          "raw": "{\"macro\":{\"title\":\"\",\"active\":true,\"actions\":[]}}"
        }
      }
    },
    {
      "name": "Auth Test - Users Me",
      "request": {
        "method": "GET",
        "auth": {
          "type": "basic",
          "basic": [
            {
              "key": "username",
              "value": "{{email}}/token"
            },
            {
              "key": "password",
              "value": "{{api_token}}"
            }
          ]
        },
        "url": "https://{{subdomain}}.zendesk.com/api/v2/users/me.json"
      }
    }
  ]
}